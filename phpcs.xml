<?xml version="1.0"?>
<ruleset name="EasyAudit">
    <description>EasyAudit coding standard based on PSR-12</description>

    <rule ref="PSR12"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="150"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>

    <file>src/</file>
</ruleset>